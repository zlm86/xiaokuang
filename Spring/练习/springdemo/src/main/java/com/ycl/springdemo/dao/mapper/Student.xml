<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ycl.springdemo.dao.StudentDao">

    <select id="selectAll" resultType="HashMap">
        SELECT * FROM student
    </select>

    <insert id="insertStudent" parameterType="com.ycl.springdemo.entity.Student">
        insert into Student(id,name ,age , birthday) values (#{id},#{name},#{age},#{birthday})
    </insert>

    <delete id="deleteStudent" parameterType="String">
        delete  from Student where Id = #{id}
    </delete>

    <update id="updateStudent" parameterType="com.ycl.springdemo.entity.Student">
        update Student set Student.name =#{name},Student.age=#{age},Student.birthday=#{birthday} where Student.id=#{id}
    </update>

    <select id="selectByName" resultType="com.ycl.springdemo.entity.Student">
        SELECT * FROM student where name=#{name}
    </select>

</mapper>
